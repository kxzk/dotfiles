# random
alias quote="daily-quote"

# python
alias license="curl https://gist.githubusercontent.com/kkilla/dbc6007d5e8f7bd6b2a54270b192f547/raw > LICENSE"
alias setup="curl https://gist.githubusercontent.com/kkilla/36e51b642ebd72d8344b65e3f4a543c9/raw >> setup.py"
alias pipupdate="pip3 freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip3 install -U"
alias pipdelete="pip3 freeze | xargs pip3 uninstall -y"
alias up="source env/bin/activate"
alias down="deactivate"
alias libs="virtualenv env --python=python3 && source env/bin/activate && pip3 install"
alias p="python3"

# go
alias g="go run"

# sys
alias rc="${EDITOR:-vim} ~/.vimrc"
alias todo="${EDITOR:-vim} ~/todo.md"
alias ip="curl ipecho.net/plain ; echo"
alias sshconfig="${EDITOR:-vim} ~/.ssh/config"
alias top='top -o cpu'
alias dots="/Users/kkilla/dotfiles"
alias clean="rm -rf ~/.Trash/*; rm -rf ~/Downloads/*"
alias date="date '+%B %e, %Y'"
alias weather="curl wttr.in"

